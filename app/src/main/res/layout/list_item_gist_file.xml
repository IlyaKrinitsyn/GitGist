<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="?paddingXSmall"
    android:paddingBottom="?paddingXSmall"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/listItemGistFileNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_file_blue_16dp"
        android:drawablePadding="?paddingXSmall"
        android:paddingStart="?paddingSmall"
        android:paddingEnd="?paddingSmall"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        tools:text="UserName/HelloWorld.java"/>

    <TextView
        android:id="@+id/listItemGistFileContentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="?paddingSmall"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:visibility="gone"
        tools:text="@tools:sample/lorem[120]"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/listItemGistFileHideView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="?paddingXXSmall"
        android:text="@string/list.item.gist.file.show.content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textSize="12sp"
        tools:text="Hide"/>

</LinearLayout>